@model Jogador 
@{
    ViewData["Title"] = "Jogadores";
}
<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID</label>
    <input type="text" name="IdJogador" />

    <label>Nome</label>
    <input type="text" name="Nome" />

    <label>ID da equipe</label>
    <select name="IdEquipe">
        <optgroup>
            @{
                Jogador LerEquipes = new Jogador();
                foreach (var item in LerEquipes.LerIdsEquipesDisponiveis())
                {
                    <option>@item</option>
                }
            }
        </optgroup>
    </select>


    <button type="submit">Cadastrar</button>  
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>ID da equipe</th>
    </thead>
    <tbody>
        @foreach (Jogador item in ViewBag.Jogadores)
        {
            <tr>
                <td>@item.IDJogador</td>
                <td>@item.Nome</td>
                <td>@item.IDEquipe</td>
            </tr>
        }
    </tbody>
</table>